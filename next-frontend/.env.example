# Self Protocol Configuration
# Required for Self Protocol identity verification

# Frontend Configuration (NEXT_PUBLIC_ prefix makes them available to the browser)
NEXT_PUBLIC_SELF_APP_NAME=BlockBelle
NEXT_PUBLIC_SELF_SCOPE=blockbelle-chat

# LOCAL DEVELOPMENT (use these for testing)
# NEXT_PUBLIC_SELF_ENDPOINT=http://localhost:3000/api/self/verify
# NEXT_PUBLIC_SELF_ENDPOINT_TYPE=staging_https
# NEXT_PUBLIC_BASE_URL=http://localhost:3000
# SELF_ENDPOINT=http://localhost:3000/api/self/verify
# SELF_USE_MOCK_PASSPORT=true

# PRODUCTION (uncomment these when deploying to Vercel)
NEXT_PUBLIC_SELF_ENDPOINT=https://your-app.vercel.app/api/self/verify
NEXT_PUBLIC_SELF_ENDPOINT_TYPE=https
NEXT_PUBLIC_BASE_URL=https://your-app.vercel.app
SELF_ENDPOINT=https://your-app.vercel.app/api/self/verify
SELF_USE_MOCK_PASSPORT=false

# Backend Configuration
SELF_SCOPE=blockbelle-chat

# Vercel Postgres (automatically added by Vercel when you create database)
# POSTGRES_URL=
# POSTGRES_PRISMA_URL=
# POSTGRES_URL_NON_POOLING=
# POSTGRES_USER=
# POSTGRES_HOST=
# POSTGRES_PASSWORD=
# POSTGRES_DATABASE=

# Note: After deploying to Vercel:
# 1. Replace "your-app.vercel.app" with your actual Vercel URL
# 2. Vercel will automatically add POSTGRES_* variables when you create the database
# 3. No need to manually set database credentials